<UserControl x:Class="Nextfliz.Views.MainApp.ActorDetailCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Nextfliz.Views.MainApp"
             mc:Ignorable="d" 
             Name="Card"
             Background="Transparent"
             d:DesignHeight="400" d:DesignWidth="300">
    <Grid>
        <!-- Define two rows -->
        <Grid.RowDefinitions>
            <!-- First row for the image -->
            <RowDefinition Height="*" />
            <!-- Second row divided into two smaller rows -->
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Image in the first row -->
        <Image Grid.Row="0" Source="{Binding ImageSource, ElementName=Card}" Stretch="UniformToFill" />

        <!-- TextBlocks in the second row -->
        <TextBlock Grid.Row="1" Text="{Binding Text1,ElementName=Card}" TextWrapping="Wrap"/>
        <TextBlock Grid.Row="2" Text="{Binding Text2,ElementName=Card}" TextWrapping="Wrap"/>
    </Grid>
</UserControl>
