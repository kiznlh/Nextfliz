<UserControl x:Class="Nextfliz.Views.MainApp.SliderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Nextfliz.Views.MainApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <!-- Column for left button -->
            <ColumnDefinition Width="*"/>
            <!-- Column for scroll viewer -->
            <ColumnDefinition Width="Auto"/>
            <!-- Column for right button -->
        </Grid.ColumnDefinitions>

        <!-- Left button -->
        <Button Content="◄" Click="SlideLeft_Click" Margin="5" Width="auto" Height="20"/>

        <!-- ScrollViewer -->
        <ScrollViewer Grid.Column="1" x:Name="scrollViewer" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Disabled">
            <StackPanel x:Name="panel" Orientation="Horizontal"/>
        </ScrollViewer>

        <!-- Right button -->
        <Button Grid.Column="2" Content="►" Click="SlideRight_Click" Margin="5" Width="auto" Height="20"/>
    </Grid>
</UserControl>
