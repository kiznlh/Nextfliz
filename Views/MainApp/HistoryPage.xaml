<Page x:Class="Nextfliz.Views.MainApp.HistoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Nextfliz.Views.MainApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HistoryPage">

    <Grid>
        <ListView ItemsSource="{Binding PurchaseHistory}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Movie" Width="120" DisplayMemberBinding="{Binding MovieName}"/>
                    <GridViewColumn Header="Ngày đặt vé" Width="120" DisplayMemberBinding="{Binding NgayDat, StringFormat={}{0:dd/MM/yyyy}}"/>
                    <GridViewColumn Header="Vị trí ghế" Width="120" DisplayMemberBinding="{Binding Seat}"/>
                </GridView>
            </ListView.View>
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <EventSetter Event="MouseDoubleClick" Handler="ListViewItem_MouseDoubleClick" />
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
    </Grid>
</Page>
