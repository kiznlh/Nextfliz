<Page x:Class="Nextfliz.Views.MainApp.FilmDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Nextfliz.Views.MainApp"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1150"
      Title="FilmDetailPage"
      Background="White">
        
    <Grid>
        <!-- Poster -->
        <Image Source="/Resources/Icons/user_icon.png" Stretch="Uniform" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,20,0,0" Width="300" Height="450"/>

        <!-- Movie Details -->
        <StackPanel Grid.Column="1" Margin="20,20,20,20">
            <TextBlock Text="Movie Title" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="Genre: Action" FontSize="16"/>
            <TextBlock Text="Duration: 2h 30m" FontSize="16"/>
            <TextBlock Text="Release Date: January 1, 2024" FontSize="16"/>
            <TextBlock Text="Rating: PG-13" FontSize="16"/>

            <!-- Stars Section -->
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Image Source="star_avatar.jpg" Width="50" Height="50"/>
                <StackPanel Margin="10,0,0,0">
                    <TextBlock Text="Stars:" FontSize="16"/>
                    <TextBlock Text="Actor 1, Actor 2, Actor 3" FontSize="16"/>
                </StackPanel>
            </StackPanel>

            <!-- Director Section -->
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Image Source="director_avatar.jpg" Width="50" Height="50"/>
                <StackPanel Margin="10,0,0,0">
                    <TextBlock Text="Director:" FontSize="16"/>
                    <TextBlock Text="Director Name" FontSize="16"/>
                </StackPanel>
            </StackPanel>

            <TextBlock Text="Certification: Rated PG-13 for some intense sequences" FontSize="16" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Page>
