<Page x:Class="Nextfliz.Views.MainApp.FilmDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Nextfliz.Views.MainApp"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1150"
      Title="FilmDetailPage"
      >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <!-- Poster row -->
            <RowDefinition Height="1*"/>
            <!-- Details row -->
        </Grid.RowDefinitions>

        <!-- Poster -->
        <!--Need Binding{}-->
        <Image Source="/Resources/Images/film_bg.jpg" Stretch="Uniform" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,0,0,0" Width="auto" Height="auto" Grid.Row="0"/>

        <!-- Movie Details -->
        <StackPanel Grid.Column="1" Margin="20,20,20,20" Grid.Row="1"> <!--Need Binding{}-->
            <TextBlock Text="Movie Title" FontSize="24" FontWeight="Bold" Foreground="White"/>
            <TextBlock Text="Genre: Action" FontSize="16" Foreground="White"/>
            <TextBlock Text="Duration: 2h 30m" FontSize="16" Foreground="White" />
            <TextBlock Text="Release Date: January 1, 2024" FontSize="16" Foreground="White"/>
            <TextBlock Text="Rating: PG-13" FontSize="16" Foreground="White"/>
            <TextBlock Text="Certification: Rated PG-13 for some intense sequences" FontSize="16" Margin="0,0,0,0" Foreground="White"/>
            
            <!-- Actor and Director Section -->
            

            
            

        </StackPanel>
    </Grid>
</Page>
