<UserControl x:Class="Nextfliz.Views.MainApp.ActorAndDirectorDetailCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Nextfliz.Views.MainApp"
             mc:Ignorable="d" 
             Name="Card"
             Background="Transparent"
             d:DesignHeight="400" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <!-- Image -->
        <Image Grid.Row="0" Source="{Binding ImageSource, ElementName=Card}" Stretch="UniformToFill" />

        <!-- Description -->
        <TextBlock Grid.Row="1" Text="{Binding HoTen,ElementName=Card}" TextWrapping="Wrap" FontSize="30" Foreground="White"/>
        <TextBlock Grid.Row="2" Text="{Binding TieuSu,ElementName=Card}" TextWrapping="Wrap" Foreground="White"/>
    </Grid>
</UserControl>
